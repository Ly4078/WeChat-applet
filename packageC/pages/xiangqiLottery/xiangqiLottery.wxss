/* 旋转动画 */
.front {
  animation: back 1s linear 1;
  backface-visibility: hidden;
}

.back {
  animation: front 1s linear 1;
}

@keyframes front {
  from {
    transform: rotateY(0deg);
  }

  to {
    transform: rotateY(180deg);
  }
}

@keyframes back {
  from {
    transform: rotateY(-180deg);
  }

  to {
    transform: rotateY(0deg);
  }
}

