
page{
  background: #F5F5FA;
}
.checkinContent{
  position: relative;
  height: 760rpx;
}
.checkinContent .banner image{
  width: 750rpx;
  height: 455rpx;
}
.proContent{
  overflow: hidden;
}
.itemP{
  width: 100%;
  margin-bottom:15rpx;
  word-wrap:break-word;
  text-indent:25rpx;
}
.checkinContent .rule{
  position: absolute;
  right: 0;
  top: 55rpx;
  background: rgba(0,0,0,.7);
  color:#fff;
  font-size: 28rpx;
  padding: 8rpx 18rpx 8rpx 25rpx;
  border-radius: 40rpx 0 0 40rpx;
}
.checkinBox{
  background: #fff;
  position: absolute;
  width: 678rpx;
  top: 300rpx;
  box-shadow: 0px 0px 10rpx rgba(199, 196, 196, 0.8);
  left: 50%;
  border-radius: 20rpx;
  transform: translateX(-50%);
  padding:40rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.checkinBox .title{
  color: #969696;
  font-size: 30rpx;
}
.checkinBox .days{
  padding: 50rpx 0;

}
.checkinBox .days .num{
  font-size: 80rpx;
  font-weight: 700;
  color: #191919;
}
.checkinBox .days .day{
  font-size: 30rpx;
  margin-left: 8rpx;
    color: #191919;
}
.checkinButton{
  width: 440rpx;
  height: 96rpx;
  font-size: 36rpx;
  text-align: center;
  line-height: 96rpx;
  border-radius: 50rpx;
  color: #fff;
  background: #FC5E2D;
}
.checkinButton.ischeckin{
  background: #ccc;
}








.selectionIo {
  width: 100%;
  height: 120rpx;
}

.selectionIo {
  display: flex;
  justify-content: center;
  vertical-align: middle;
  align-items: center;
  background: #fff;
}

.selectionIoImg {
  width: 64rpx;
  height: 24rpx;
  vertical-align: middle;
}

.selectionIoImgRight {
  width: 64rpx;
  height: 24rpx;
  vertical-align: middle;
  transform: rotate(180deg);
}

.selectionIo text {
  padding: 0rpx 22rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  color: #FC5E2D;
  letter-spacing: 2rpx;
}


.classify_item {
  width: 375rpx;
  min-height: 500rpx;
  border-right:0.5rpx solid #f5f5fa;
  border-bottom:0.5rpx solid #f5f5fa;
  float: left;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
  background: #fff;
}
.classify_item:nth-child(2n-1){
  /* margin-left: 15rpx; */
}
.classify_item image{
  width: 360rpx;
  height: 360rpx;
}
.classify_item:last-child{
  margin-bottom: 20rpx;
}
.contTxt{
  width: 340rpx;
  padding:  16rpx 0rpx 20rpx 0rpx;
}
.goods_tit {
  font-size: 28rpx;
  height: 74rpx;
  line-height: 37rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-weight: 700;
}
.goods_addr, .goods_distance {
  font-size: 20rpx;
  color: #969696;
  display: flex;
  justify-content: space-between;
}
.goods_addr {
  padding: 4rpx 0;
}
.goods_icon {
  font-size: 22rpx;
  color: #FC5E2D;
  background-color: #FFF5F2;
  border: 1rpx solid #FFA286;
  border-radius: 4rpx;
}

.priceBox {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  padding-top: 10rpx;
  box-sizing: border-box;
}

.discount_price {
  font-size: 36rpx;
  color: #FF4A4A;
  padding-right: 14rpx;
}

.original_price {
  font-size: 30rpx;
  color: #969696;
  text-decoration: line-through;
}

.indexIcon {
  position: fixed;
  right: 20rpx;
  bottom: 170rpx;
  z-index: 1000;
  width: 100rpx;
  height: 100rpx;
  flex-direction: column
}

