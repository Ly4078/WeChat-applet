.shopItem {
  width: 33.33%;
  padding: 0 12rpx;
  box-sizing: border-box;
  overflow: hidden;
  margin-bottom: 50rpx;
}

.shopItem_inner {
  width: 100%;
  position: relative;
}

.itemBg {
  width: 100%;
  height: 150rpx;
}

.itemBg image {
  border-radius: 10rpx;
}

.itemShadow {
  width: 100%;
  height: 66rpx;
  position: absolute;
  top: 0;
  left: 0;
  background: linear-gradient(rgb(43, 42, 42), transparent);
  opacity: 0.7;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.shopName {
  width: 100%;
  padding-top: 10rpx;
  font-size: 28rpx;
  text-align: center;
}

.itemDistance {
  position: absolute;
  top: 14rpx;
  right: 14rpx;
  background-color: #191919;
  opacity: 0.5;
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 50rpx;
}