<view class='modal_box  modal_box11' wx:if="{{isshowlocation}}">
  <view class='weizhi'>
    更多体验需要你授权位置信息
    <button bindtap="openSetting">确定</button>
  </view>
</view>
<view class="shopList skeleton">
  <view class="shopItem skeleton-rect" wx:for="{{list}}" wx:key="index" bindtap='toBranch' id="{{item.id}}">
    <image-loader class="itemBg skeleton-rect" width="100%" height="340rpx" default-image='/images/icon/morentu.png' original-image="{{item.picUrl?item.picUrl:'/images/icon/morentu.png'}}" />
    <view class="itemShadow"></view>
    <view class="shopInfo">
      <view class="shopName skeleton-rect">{{item.name}}</view>
      <view class="shopAdr skeleton-rect">
        <view class="shopAdr_l">{{item.address}}</view>
        <view>{{item.distance}}</view>
      </view>
    </view>
  </view>
  <view class="placeholder" wx:if="{{isEmpty}}">
    <image src="/images/icon/zhanweitu.png"></image>
  </view>
</view>

<!-- 数据不多时底部水印 -->
<view wx:if="{{list.length <= 2 && list.length > 0}}" class="bottom_shade">
  <image src="/images/icon/shade.png"></image>
</view>

<!-- 回到首页 -->
<image class="indexIcon" src="/images/icon/goindex.png" bindtap='toIndex' wx:if="{{shareId}}"></image>