page {
  height: 100%;
  background-color: #F5F5FA;
}

.indexIcon {
  position: fixed;
  right: 20rpx;
  bottom: 170rpx;
  z-index: 1000;
  width: 100rpx;
  height: 100rpx;
}

.wdBranch {
  color: #191919;
}

.branchTop {
  position: relative;
  height: 312rpx;
  width: 100%;
  letter-spacing: 2rpx;
}

.wdPic {
  height: 100%;
  width: 100%;
}

.wdShadow {
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: linear-gradient(rgb(10, 10, 10) 70%, transparent);
  opacity: 0.5;
}

.shareIcon {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 28rpx;
  right: 40rpx;
  z-index: 10;
  margin: 0;
  padding: 0;
  border: 0;
  border-color: transparent;
  background-color: transparent;
}

.shareIcon image {
  width: 42rpx;
  height: 50rpx;
}

.branchInfo {
  width: 100%;
  position: absolute;
  top: 100rpx;
  left: 0;
  color: #fff;
  padding: 0 26rpx 0 30rpx;
  box-sizing: border-box;
}

.branchName {
  display: flex;
  align-items: center;
  font-size: 40rpx;
}

.navigation {
  height: 38rpx;
  line-height: 38rpx;
  display: inline-block;
  margin-left: 24rpx;
  border-radius: 22rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  background-color: #fff;
  color: #191919;
}

.branchAdr {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  margin-top: 26rpx;
}

.branchList {
  display: flex;
  flex-wrap: wrap;
  padding: 0 26rpx;
  margin-top: -50rpx;
  position: relative;
  /* top: -60rpx; */
  z-index: 9;
}

.menuItem {
  width: 50%;
  box-sizing: border-box;
  margin-bottom: 18rpx;
}

.menuItem:nth-child(2n) {
  padding-left: 9rpx;
}

.menuItem:nth-child(2n+1) {
  padding-right: 9rpx;
}

.menuItemWrap {
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #fff;
}

.menuPic {
  width: 100%;
  height: 340rpx;
}

.menuInfo {
  padding: 0 18rpx 10rpx 18rpx;
  box-sizing: border-box;
}

.shopName {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 20rpx;
  color: #B1B1B1;
  padding: 10rpx 0;
}

.shopName_l {
  display: flex;
  align-items: center;
  flex-direction: row;
}

.shopName_l image {
  width: 20rpx;
  height: 20rpx;
  margin-right: 4rpx;
}

.shopName_l view {
  width: 180rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.menuPrice {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  font-size: 18rpx;
}

.menuPrice_l {
  display: flex;
  flex-direction: row;
  color: #FF4343;
}

.cost_l {
  text-align: right;
  display: flex;
  flex-direction: column;
}

.priceIcon {
  font-size: 24rpx;
}

.cost_r {
  font-size: 50rpx;
  padding-left: 8rpx;
}

.menuPrice_r {
  padding-bottom: 8rpx;
}