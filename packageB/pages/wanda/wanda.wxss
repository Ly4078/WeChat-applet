.shopList {
  min-height: 100%;
  padding: 20rpx 28rpx;
  box-sizing: border-box;
  letter-spacing: 2rpx;
}

.shopItem {
  width: 100%;
  height: 340rpx;
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
}

.itemBg {
  width: 100%;
  height: 100%;
}

.itemShadow {
  width: 100%;
  height: 140rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  background: linear-gradient(transparent, rgb(43, 42, 42));
  opacity: 0.7;
}

.shopInfo {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 0 22rpx 0 20rpx;
  box-sizing: border-box;
}

.shopName {
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 12rpx 0 10rpx;
  background-color: #fff;
  color: #191919;
  border-radius: 8rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.shopAdr {
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #fff;
  padding: 18rpx 0;
}

.shopAdr_l {
  width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.indexIcon {
  position: fixed;
  right: 20rpx;
  bottom: 120rpx;
  z-index: 1000;
  width: 100rpx;
  height: 100rpx;
}