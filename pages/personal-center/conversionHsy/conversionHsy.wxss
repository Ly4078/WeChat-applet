page{
  background:rgba(245,245,250,1);
}

.records_wrap{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
}

.records_inner{
  width: 94%;
  padding-top: 20rpx;
}

.records_single{
  width: 100%;
  height: 170rpx;
  background:rgba(255,255,255,1);
  border-radius:8rpx;
  box-shadow:0px 2px 10px 0px rgba(120,120,120,0.28);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.records_img{
  width: 24%;
  height: 170rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.records_images{
  width: 116rpx;
  height: 133rpx;
  border-radius: 8rpx;
}

.records_right{
  width: 76%;
  height: 170rpx;
  letter-spacing: 2rpx;
  line-height: 48rpx;
}

.records_right_top{
  width: 94%;
  display: flex;
  justify-content: space-between;
  padding-top: 12rpx;
}

.records_right_top text:nth-child(1){
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  color:rgba(25,25,25,1);
}

.records_right_top text:nth-child(2){
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  color:rgba(252,94,45,1);
}

.records_right_cent{
  width: 94%;
  font-size:22rpx;
  font-family:PingFangSC-Regular;
  color:rgba(177,177,177,1);
  display: flex;
  justify-content: space-between;
}

.practical_gold{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  color:rgba(231,156,38,1);
}