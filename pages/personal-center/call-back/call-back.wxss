.setcode{
  width: 694rpx;
  margin:0 28rpx;
}
.setcode input{
  width:100%;
  height: 112rpx;
  line-height: 112rpx;
  font-size: 36rpx;
  background: #fff;
  color: #191919;
  text-align: center;
  margin:28rpx 0;
}
.setcode inpu::after{
  border: none;
}
.verification-inside {
  width: 694rpx;
  height: 112rpx;
  background: #fff;
  margin: 28rpx;
  background: #fff;
}

.inputBox {
  position: relative;
  width: 100%;
  height: 108rpx;
  font-size: 36rpx;
  text-align: justify;
  background-color: white;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
}
.inputBox:nth-child(1){
  border: 1rpx solid #E0E0E0;
}
 .inputBox text:nth-child(1){
   float: left;
   margin-left:20rpx;
 }
 .inputBox text:nth-child(2){
   float: right;
   margin-right:20rpx;
 }
.inputBox text {
  height: 100%;
  line-height: 108rpx;
  color: #191919;
  font-size: 32rpx;
}

.accountInp {
  width: 100%;
  height: 100%;
  padding: 21rpx;
  box-sizing: border-box;
  border: 0;
  border-radius: 5px;
  text-align: right;
}
 
.discountInfo,.paymentBox{
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  padding-top: 34rpx;
} 

.paymentBox{
  color: #555555;
}

.discountInfo text {
  display: inline-block;
}

.discountInfo {
  color: #ff4545;
}
button[plan]{
  border: 0;
}

.okBtn {
    margin-top: 60rpx;
    display: block;
    height: 100rpx;
    line-height: 100rpx;
    width: 100%;
    border-radius: 5px;
    background-color: #B1B1B1;
    color: #fff;
    font-size: 36rpx;
    text-align: center;
    letter-spacing: 2px;
}


