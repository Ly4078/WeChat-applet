page{
  background:rgba(245,245,250,2);
  height: 100%;
  width: 100%;
}

.meticulous{
  width: 100%;
  display: flex;
  justify-content: center;
  padding-top: 2rpx;
}

.meticulous:nth-child(1){
  padding: 0rpx 0rpx;
  border-radius: 0rpx;
}

.attention{
  width: 100%;
  height: 128rpx;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.portraitWrap{
  width: 70%;
  height: auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.gender{
  width: 20rpx;
  height: 24rpx;
  margin: 0rpx 0rpx 0rpx 8rpx;
  vertical-align: middle;
}

.portraitLeft{
  width: 60%;
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  color:rgba(25,25,25,1);
  line-height: 52rpx;
}

.portraitNickname{
  display: inline-block;
}

.portraitNickname text{
  font-size: 32rpx;
  font-family:PingFangSC-Medium;
  letter-spacing: 2rpx;
  vertical-align: middle;
}

.button{
  width: 176rpx;
  height: 78rpx;
  background-color: 404147;
  font-size: 30rpx;
  box-shadow:2px 0px 10px rgba(152,152,152,0.4);
  letter-spacing: 2rpx;
}

.attentionBTn{
   width:130rpx; 
  height:50rpx;
  /* padding: 0 20rpx; */
  background:rgba(252,94,45,1);
  border-radius:25rpx;
  /* box-shadow:2px 0px 6px rgba(164,68,1,0.54); */
  font-size: 28rpx;
  line-height: 50rpx;
  color: #fff;
  letter-spacing: 3rpx;
}

.attentionBTn.del {
  background-color: #B1B1B1;
}

.portraitRight{
  width: 30%;
  display: flex;
  justify-content: flex-end;
  padding-right: 42rpx;
  box-sizing: border-box;
}

.portraitRight.del {
  opacity: 0;
}

.noneBox {
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.noneBox image {
  width: 260rpx;
  height: 260rpx;
}

.hot-recoItem-left {
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
  margin: 0rpx 28rpx 0rpx 28rpx;
}

.hot-recoItem-left image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}