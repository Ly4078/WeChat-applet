@import "../personal-center.wxss";
page{
  background-color: #FFF
}
.centreImages{
  border-radius: 0rpx;
  border: 0px;
  width: 250rpx;
  height: 250rpx;
  margin-top: 36rpx;
}

.officialAccounts{
  font-size: 28rpx;
  color: #FC5E2D;
  vertical-align: middle;
}

.official{
  width: 100%;
  display: flex;
  justify-content: center;
  font-size: 24rpx;
  color: #808080;
  letter-spacing: 2px;
  padding-top: 100rpx;
  padding-bottom: 20rpx;
}

.official text:nth-child(1){
  display: block;
  text-align: center;
  padding-bottom: 12rpx;
}

.official text:nth-child(2){
  font-weight: 600;
}

.centreTopName {
  width: 100%;
  height: 400rpx;
  text-align: center;
}

.centreText{
  width: 100%;
  display: flex;
  justify-content: center;
  z-index: 999;
  color: black;
}

.myList {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
}

.myList-single {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.myListImages {
  vertical-align: middle;
}

.mylistText {
  font-size: 28rpx;
  padding-top: 0;
}

.myList_left {
  width: 260rpx;
  text-align: right;
  padding-right: 40rpx;
}