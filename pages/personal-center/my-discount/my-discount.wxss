@import "discount-template/discount-template.wxss";
page{
  background-color: #EBEBEB;
}
.placeholder {
  position: none;
  height: 90%;
}
.placeholder image{
  top: 40%;
  margin-top: 0;
}
.conceal-dot{
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #EBEBEB;
  position: absolute;
  top: 175rpx;
  left: 22rpx;
}

.conceal-dot-right{
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #EBEBEB;
  position: absolute;
  top: 175rpx;
  left: 709rpx;
}

.already-past-due{
  width: 92%;
  height: 76rpx;
  background-color: white;
  margin-top: 40rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  color: #555555;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  letter-spacing: 2px;
}

.already-past-wrap{
  width: 100%;
  display:flex;
  justify-content: center;
}

page {
  width: 100%;
  height: 100%;
}

.discountTab {
  display: flex;
  flex-direction: row;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  box-sizing: border-box;
  border-top: 1rpx solid #E0E0E0;
  border-bottom: 1rpx solid #E0E0E0;
}

.discountTab view {
  flex: 1;
  text-align: center;
  box-sizing: border-box;
  height: 100%;
}

.discountTab text {
  display: inline-block;
  color: #808080;
  font-size: 28rpx;
  box-sizing: border-box;
  height: 100%;
}

.discountTab view.active text {
  border-bottom: 4rpx solid #FC5E2D;
  color: #FC5E2D;
}

.discountBox {
  padding: 20rpx 28rpx 0 28rpx;
  box-sizing: border-box;
  width: 100%;
}