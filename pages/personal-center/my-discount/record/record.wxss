page{
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #F5F5FA;
}

.recordItme{
  width: 670rpx;
  padding: 10rpx 10rpx 28rpx 10rpx;
  background: #fff;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
}
.itemleft{
  width: 170rpx;
  height: 153rpx;
}
.itemleft image{
  width: 153rpx;
  height: 153rpx;
}
.itemright{
  width: 470rpx;
  padding-top: 20rpx;
}
.itemright view{
  height: 40rpx;
  line-height: 40rpx;
}
.irtop{
  color: #191919;
  font-size: 28rpx;
}
.irtop text{
  color: #FC5E2D;
  font-size: 24rpx;
  float: right;
}
.irmoe{
  color: #555;
  font-size: 22rpx;
}
.irbut{
  color: #B1B1B1;
  font-size: 20rpx;
}
.placeholder image {
  left: 90%;
}