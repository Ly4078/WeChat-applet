<template name="discountList">
  <!--
三者区分
现金券.type：1  cash:true
折扣券.type：1   discount:true
食典券(活动券).type：3
  -->
  <view class='securityWrap' id="{{item.soId}}" catchtap='immediateUse'>
    <view class='security-use'>
      <view class="security-top">
        <image class="security-top-bg" wx:if="{{item.cash}}" src="/images/icon/ticketImg.png"></image>
        <image class="security-top-bg" wx:if="{{item.discount}}" src="/images/icon/ticketImg.png"></image>
        <image class="security-top-bg"  wx:if="{{item.type == 3}}" src="/images/icon/ticketImg.png"></image>
        <view class='security-top-inner'>
          <!--现金券/享7券样式  -->
          <view class='security-top-left contick' wx:if="{{item.cash}}">
             <view><text class='fist'>{{item.couponAmount}}</text>元享7券</view>
            <view>*满减规则由商家制定</view>
          </view>

          <!--折扣券样式  -->
          <view class='security-top-left contick' wx:if="{{item.discount}}">
            <view><text class='fist'>套</text>餐券</view>
             <view>*满减规则由商家制定</view>
          </view>

          <!--食典（活动）券样式  -->
          <view class='security-top-left contick' wx:if="{{item.type == 3}}">
             <view><text class='fist'>{{item.couponAmount}}</text>元食典券</view>
            <view>*满减规则由商家制定</view>
          </view>

        </view>

      </view>
      <view class='deadline-time'>
        <view>
          <text>有效期至:</text>
          <text>{{item.expiryDate}}</text>
        </view>
        <view>
          <text wx:if="{{item.isDue == 1}}">已过期</text>
          <text wx:if="{{item.isUsed == 1 && item.isDue == 0}}">已使用</text>
          <text class='daishiyong' wx:else>待使用</text>
        </view>
      </view>
    </view>
    <view class='conceal-dot'></view>
    <view class='conceal-dot-right'></view>
  </view>
</template>