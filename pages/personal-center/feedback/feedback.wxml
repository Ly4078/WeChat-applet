<view class='Wrap'>
  <view class='list listTop' hover-class='listhover' hover-stay-time="200" id="15" bindtap='particulars'>
    <view class='headCenter'>
      <view class='single'>
        <view>
          <image class='singleImages' src='/images/icon/juxinges.png'></image>
          <text class='tickling'>问题反馈与功能建议</text>
        </view>
        <image class='singleImg' src='/images/icon/home_arrow.png'></image>
      </view>
    </view>
  </view>

  <view class='heaTop'><text class='headline'>请选择反馈内容</text></view>
  <view class='list' hover-class='listhover' hover-stay-time="200" wx:for="{{issueArray}}" wx:for-item="item" wx:key="{{id}}" id="{{item.id}}" bindtap='particulars'>
    <view class='headCenter'>
      <view class='single'>
        <text>{{item.issueName}}</text>
        <image class='singleImg' src='/images/icon/home_arrow.png'></image>
      </view>
    </view>
  </view>
</view>