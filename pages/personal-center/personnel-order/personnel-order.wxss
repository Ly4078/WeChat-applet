@import "order-template-item/order-template-item.wxss";
/* tab栏样式 */
page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #F5F5FA;
}
.myorder_tab {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 90rpx;
  border-bottom: 2rpx solid #e0e0e0;
  text-align: center;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  top: 80rpx;
  background: #fff;
  z-index: 3000;
}
.zhanwei{
  width: 100%;
  height: 166rpx;
}
.myorder_tab_list {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 24rpx;
  display: inline-block;
  width: 20%;
  color: #808080;
  box-sizing: border-box;
}

.myorder_tab_list.on {
  color: #fc5e2d;
  border-bottom: 5rpx solid #fc5e2d;
}

.placeholder {
  height: 80%;
}

.navbar{
  width: 100%;
  height: 80rpx;
  display: flex;
  background-color: #fff;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  font-size:24rpx;
  color:rgba(128,128,128,1);
  justify-content: center;
  border-top: 1px solid #E0E0E0;
  align-items: center;
  letter-spacing: 2rpx;
}
.navbar .item{
  width: 375rpx;
  height: 80rpx;
  position: relative;
  text-align: center;
  line-height: 80rpx;
  letter-spacing: 3rpx;
  background:rgba(255,174,149,1);
  color: #ffffff;
}

.navbar .item.active{
  color: #ffffff;
  background:rgba(252,94,45,1);
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
}



/* 物流订单 */

.commoditys{
  width: 100%;
  position: fixed;
  white-space:nowrap;
  top: 80rpx;
  background: #fff;
  font-size:24rpx;
  height: 90rpx;
  color:rgba(128,128,128,1);
  border-bottom: 1px solid #E0E0E0;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.ditybj
{
  width: 100%;
  height: 160rpx;
}
.commoditys .item{
  position: relative;
  width: 20%;
  /* float: left; */
  /* flex: auto; */
  display: inline-block;
  text-align: center;
  line-height: 90rpx;
}
.commoditys .item.active{
