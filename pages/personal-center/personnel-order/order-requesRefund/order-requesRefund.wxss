

page{
  background: #F5F5FA;
}
.containers{
  padding: 20rpx;
}
.containers .title{
  font-size: 32rpx;
  color:#191919;
  margin-bottom: 20rpx;
}
.containers .body{
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}
.reasonList{
  
  border-bottom: 1rpx solid #f5f5f5;
}
.reasonList label{
  align-items: center;
   display: flex;
   padding: 20rpx 0;
  flex-direction: row;
}
.reasonList text{
  flex:1;
  font-size: 30rpx;
  color:#191919;
}
.other{
  padding: 20rpx;
  margin-top:20rpx;
}
.other .detail{
    font-size: 30rpx;
    max-height: 200rpx;
}
.tips{
  display: flex;
  margin-top: 20rpx;
  flex-direction: column;
}
.tips view{
  font-size: 26rpx;
  color:#969696;
}

.submit{
  width: 100%;
  height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  color:#fff;
  line-height: 90rpx;
  border-radius: 5rpx;
  margin-top: 200rpx;
  background: #969696;
  transition: all .3s;
}
.submit.active{
  background: #FC5E2D;
}