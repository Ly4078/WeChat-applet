page {
  background: #f5f5f5;
}

.order_detail {
  background: #fff;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  border-top: 0.5rpx solid #f5f5f5;
  display: flex;
  flex-direction: row;
}

.order_detail .goodsimg {
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
}

.order_detail .goodsimg image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  background: pink;
}

.order_detail .detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  justify-items: center;
  justify-content: space-around;
  margin-left: 20rpx;
}

.order_detail .detail view {
  color: #191919;
  font-size: 30rpx;
  font-weight: 600;
}

.billing_type {
  background: #fff;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  margin: 20rpx 0;
  display: flex;
  flex-direction: column;
}

.billing_type .type_content {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.billing_type .type_content .billingItem {
  color: #969696;
  border: 0.5rpx solid #969696;
  border-radius: 8rpx;
  padding: 20rpx 80rpx;
  font-size: 30rpx;
  transition: 0.3s all;
}

.billing_type .type_content .billingItem.active {
  color: #fc5e2d;
  border: 0.5rpx solid #fc5e2d;
}

.billing_type .tips {
  font-size: 28rpx;
  margin-top: 30rpx;
  color: #969696;
}

.form_content {
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
  background: #fff;
  box-sizing: border-box;
}

.form_content .form_item {
  border-bottom: 0.5rpx solid #f5f5f5;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.form_content .form_item:last-child {
  border-bottom: none;
}

.form_content .form_item .item_types {
  padding: 24rpx 0;
}

.form_content .form_item .item_input {
  flex: 1;
}

.form_content .form_item .item_input input {
  padding: 24rpx 0;
  text-align: right;
}

.form_content .form_item .item_types .radio-group {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  font-size: 34rpx;
  color: #191919;
}

.form_item .item_types .radio-group view {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 70rpx;
}

.form_content .form_item .item_name {
  margin-right: 40rpx;
  font-size: 34rpx;
  color: #191919;
}

.choiceaddress {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.choiceaddress>text {
  font-size: 28rpx;
  color: #969696;
  margin: 20rpx 0 0 30rpx;
}

.choiceaddress .address {
  padding: 40rpx 30rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.choiceaddress .address .add_left image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 15rpx;
}

.choiceaddress .address .add_left {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 34rpx;
  color: #191919;
}

.choiceaddress .address .add_leftdetail {
  font-size: 30rpx;
  color: #333;
  margin-right: 30rpx;
  flex: 1;
}

.choiceaddress .address .add_right {
  width: 24rpx;
  height: 44rpx;
}

.submits {
  margin: 150rpx 20rpx 20rpx 20rpx;
  text-align: center;
  background: #bebebe;
  color: #fff;
  font-size: 34rpx;
  padding: 25rpx 0;
  border-radius: 60rpx;
}

.submits.active {
  background: #fc5e2d;
}
