/* 授权手机号码弹层 */
.getPhone{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 9;
}
.getPhone .shadow{
  position: absolute;
   left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 99;
  background: rgba(0,0,0,0.5)
}
.getPhone .box{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-54%);
  z-index: 999;
  background: #fff;
  width: 520rpx;
  border-radius: 5rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.getPhone .box icon{
  display: block;
  margin: 40rpx auto;
  text-align: center;
}
.getPhone .box text{
  font-size: 32rpx;
  color:#191919;
}
.getPhone .box .mini{
  color:#969696;
  font-size: 28rpx;
  margin: 15rpx 0;
}
.getPhone .box .select{
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
  justify-content: center;
  border-top: 1rpx solid #f5f5f5;
}
.getPhone .box .select button{
  width: 50%;
  background: #fff;
  padding: 10rpx 0;
  font-size: 30rpx;
  color:#969696;
}
.getPhone .box .select .allow{
  color:#18B82B;
  border-left: 1rpx solid #f5f5f5;
}
