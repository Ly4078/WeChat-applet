.homePage_list_item {
  padding-bottom: 8rpx;
  width: 50%;
  height: 594rpx;
  box-sizing: border-box;
}

.homePage_list_item:nth-child(2n+1) {
  padding-right: 4rpx;
}

.homePage_list_item:nth-child(2n) {
  padding-left: 4rpx;
}

.list_item_middle {
  height: 100%; 
  width: 100%;
  overflow: hidden; 
  position: relative;
}

.abcimg, .list_item_middle video {
  width: 100%;
  height: 100%;
}

.list_item_top {
  display: flex;
  justify-content: space-between;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 24rpx 0 20rpx;
  z-index: 9;
  box-sizing: border-box;
}

.list_item_top_l {
  display: flex;
  flex-direction: row;
}

.list_item_top_l image {
  height: 42rpx;
  width: 42rpx;
  margin-right: 18rpx;
  border-radius: 50%;
}

.list_item_top_r text {
  font-size: 28rpx;
  color: #b1b1b1;
}

.list_item_top_r text.active {
  color: #FC5E2D;
}

.list_item_top_r image {
  height: 30rpx;
  width: 30rpx;
  margin-left: 12rpx;
}

.list_item_name {
  color: #fff;
  font-size: 28rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  width: 200rpx;
}

.playIcon {
  width: 28rpx;
  height: 28rpx;
  padding-top: 6rpx;
}

.playIcon.del {
  width: 50rpx;
  height: 50rpx;
}

.vodeoimg{
  width: 100%;
  height: 100%;
}

.motai{
  height:100%;
  width:100%;
  position:absolute;
  top:0;
  left: 0;
  background-color:#191919;
  opacity:0.5;
}

.summary {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 100%;
  padding: 0 18rpx 0 24rpx;
  box-sizing: border-box;
  position: absolute;
  bottom: 22rpx;
  left: 0;
  font-size: 30rpx;
  color: #fff;
}