.hot_activity {
  background-color: #FD8E44;
  height: 100%;
}
/* 顶部banner */
.hot_banner {
  height: 481rpx; 
  width: 100%;
  margin-bottom: 36rpx;
}

.hot_banner_img {
  height: 481rpx; 
  width: 100%;
}

.hot_main {
  padding: 0 28rpx;
  box-sizing: border-box;
  padding-bottom: 40rpx;
}
/* 主办方 */
.hot_Sponsor {
  font-size: 30rpx;
  letter-spacing: 4rpx;
}

.hot_Sponsor_tit {
  width: 100%;
  text-align: center;
  color: #fff;
  margin-bottom: 12rpx;
}

.hot_Sponsor_guys {
  display: flex;
  flex-direction: row;
}

.hot_Sponsor_guys view {
  flex: 1;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 10rpx;
  /* box-shadow: 0 6rpx 10rpx #242424; */
  color: #FD7814;
}

.hot_Sponsor_margin {
  margin-right: 10rpx;
}

/* 活动介绍说明 */
.hot_description {
  margin: 40rpx 0;
  padding: 0 37rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-right: 10rpx;
  width: 100%;
  /* height: 638rpx; */
  font-size: 30rpx;
  color: #555;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
}

.labelDiskette{
  width: 100%;
  padding: 20rpx 0rpx; 
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  letter-spacing: 2rpx;
}

.hot_desc_time {
  display: inline-block;
  background-color: #FD7814;
  color: #fff;
  width: 100%;
  padding: 10rpx 0;
  margin: 30rpx 0 40rpx 0rpx;
  border-radius: 50rpx;
  text-align: center;
}

.hot_desc_info {
  font-size: 28rpx;
  /* text-indent: 2em; */
  margin-bottom: 53rpx; 
}

.hot_desc_champion {
  margin: 53rpx 0 28rpx 0;
}

.hot_desc_btn {
  display: flex;
  justify-content: center;
  padding-bottom: 53rpx;
}

.hot_desc_btn button {
  border-radius: 50rpx;
  border: 2rpx solid #555555;
  box-sizing: border-box;
  color: #555555;
  padding: 0 27rpx;
  font-size: 30rpx;
  margin: 45rpx 20rpx 0 20rpx;
  height: 60rpx;
  line-height: 54rpx;
}

.hot_ticket {
  /* margin: 40rpx 0; */
  padding: 24rpx 28rpx;
  box-sizing: border-box;
  color: #FD7814;
  border-radius: 10rpx;
  /* box-shadow: 0 6rpx 10rpx #242424; */
  height: 140rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #fff;
}

.hot_ticket_l image {
  width: 92rpx;
  height: 92rpx;
  float: left;
  margin-right: 28rpx;
}

.hot_ticket_l_txt {
  float: left;
  width: 220rpx;  
  height: 92rpx;
  line-height: 92rpx;
}

.hot_ticket_txt_f {
  font-size: 32rpx;
  text-align: top;
  margin-top: 6rpx;
  height: 92rpx;
}

.hot_ticket_txt_s {
  font-size: 27rpx;
  color: #555;
  text-align: buttom;
  margin-top: 6rpx;
}

.hot_ticket_r {
  border: 2rpx solid #FD7814;
  color: #FD7814;
  height: 58rpx;
  line-height: 58rpx;
  padding: 0 21rpx;
  font-size: 30rpx;
  margin-top: 18rpx;
  border-radius: 50rpx;
}

/* 活动列表 */
.hot_list_box {
  border-top: 1rpx solid #fff;

}

.hot_list_tab {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 28rpx 0;
}

.hot_list_tab view {
  width: 205rpx;
  height: 60rpx;
  line-height: 54rpx;
  border: 2rpx solid #fff;
  /* color: #fff;  */
  border-radius: 50rpx;
  text-align: center;
  margin: 0 10rpx;
}
.selected{
  background: #fff;
  color: #FF8E39;
}
.noselect{
  color: #FFF;
}
.hot_list_search {
  width: 100%;
  height: 68rpx;
  position: relative;
  background-color: #fff;
  border-radius: 50rpx;
}

.hot_list_search input {
  width: 95%;
  height: 68rpx;
  line-height: 68rpx;
  padding: 0 29rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #FD7814;
}

.hot_list_search image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 29rpx;
  top: 15rpx;
}

.hot_list {
  padding-top: 35rpx;
  display: flex;
  flex-wrap: wrap;
}

.hot_list_item:nth-child(2n+1){
  padding-right: 4rpx;
}

.hot_list_item:nth-child(2n){
  padding-left: 4rpx;
}

.hot_list_item {
  display: inline-block;
  width: 50%;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.hot_list_item_t {
  height: 522rpx;
  width: 96%;
  background-color: #fff;
  border-radius: 10rpx;
  /* box-shadow: 0 4rpx 15rpx #242424; */
}

.list_item_info {
  width: 100%;
  height: 388rpx;
  position: relative;
}

.list_item_name {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  background-color: #191919;
  opacity: 0.5;
  color: #fff;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.list_item_name_f {
  float: left;
}

.list_item_name_s {
  font-size: 26rpx;
  float: right;
  width: 180rpx;
  text-align: right;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.list_item_info image {
  width: 100%;
  height: 100%;
}

.list_item_vote {
  height: 134rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.list_item_vote view {
  width: 100%;
  margin: 10rpx 0;
  font-size: 32rpx;
  text-align: center;
  color: #555;
}

.list_item_vote button {
  height: 56rpx;
  line-height: 50rpx;
  width: 100%;
  border: 2rpx solid #FD7814;
  color: #FD7814;
  box-sizing: border-box;
  border-radius: 50rpx;
  font-size: 30rpx;
  background-color: #fff;
}
.vote_button{
  color: #b1b1b1 !important;
  border: 2rpx solid #b1b1b1 !important; 
}
.hot_list_item_b {
  height: 70rpx;
  line-height: 60rpx;
  width: 96%;
  border: 2rpx solid #fff;
  border-radius: 10rpx;
  text-align: center;
  margin-top: 10rpx;
}

.hot_list_item_b image {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  margin-bottom:18rpx;
  margin-right: 10rpx;
}

.hot_list_item_b text {
  display: inline-block;
  color: #fff;
  font-size: 24rpx;
  max-width: 240rpx;
  height: 70rpx;
  line-height: 70rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}