.maximumTop {
  width: 100%;
  height: 380rpx;
  position: relative;
}

.maximumImg {
  width: 100%;
  height: 100%;
}

.particulars {
  width: 124rpx;
  height: 40rpx;
  background:rgba(34,34,34,1);
  opacity:0.72;
  border-radius:21px 0px 0px 19px;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  position: absolute;
  top: 56rpx;
  right: 0rpx;
  letter-spacing: 2rpx;
}

.maximumList {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
}

.manListCenter {
  width: 100%;
  box-shadow: 0rpx 0rpx 0rpx 0rpx rgba(107, 107, 107, 0.6);
  border-radius: 10rpx;
  background-color: #fff;
}

.nav {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
}

.default {
  line-height: 100rpx;
  text-align: center;
  flex: 1;
  color: #555555;
  font-size: 34rpx;
  border-radius:0rpx 10rpx 0rpx 10rpx;
}

.red {
  line-height: 100rpx;
  text-align: center;
  color: #FC5E2D;
  flex: 1;
  font-weight: bold;
  font-size: 34rpx;
  border-bottom: 3rpx solid #FC5E2D;
}

.show {
  display: block;
  display: flex;
  justify-content: center;
  border-top: 1rpx solid #e0e0e0;
}

.hidden {
  display: none;
  text-align: center;
  line-height: 200px;
}

.selectedImg{
  width: 292rpx;
  height: 292rpx;
}

.delayWrap{
  width: 100%;
  height: 294rpx;
  border-bottom: 1rpx solid #EBEBEB;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.delayRight{
  width: 70%;
  height: 100%;
}

.delayText{
  height: 78rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size:28rpx;
  margin:28rpx 20rpx 0rpx 20rpx;
  letter-spacing: 2rpx;
}

.moneyBtn{
  height: 68rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 36rpx 0rpx 0rpx 20rpx;
}

.ruling text:nth-child(1){
  font-size:40rpx;
  color:rgba(255,74,74,1);
}

.ruling text:nth-child(2){
  font-size:28rpx;
  text-decoration:line-through;
  color:rgba(150,150,150,1);
  padding-left: 6rpx;
}

.moneyBtnRight{
  width:140rpx;
  height:58rpx;
  background:linear-gradient(0deg,rgba(255,100,84,1) 0%,rgba(255,146,74,1) 100%);
  border-radius:28rpx;
  font-size:28rpx;
  color:rgba(255,255,255,1);
  text-align: center;
  line-height: 56rpx;
  letter-spacing: 2rpx;
  margin-right: 34rpx;
}

