.priceRuling{
  height:146rpx;
  background:rgba(255,255,255,1);
  border: 1rpx solid #CBCBCB;
  display:flex;
  justify-content: space-around;
}

.priceRuling-left{
  width: 40%;
  line-height: 52rpx;
  padding-top: 12rpx;
}

.priceRuling-right{
  width: 40%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right: 30rpx;
}

.toponymy{
  font-size:28rpx;
  color:rgba(25,25,25,1);

}

.ruling text:nth-child(1){
  font-size:40rpx;
  color:rgba(255,74,74,1);
}

.ruling text:nth-child(2){
  font-size:28rpx;
  text-decoration:line-through;
  color:rgba(150,150,150,1);
  padding-left: 6rpx;
}

.priceRuling-right button{
  width:132rpx;
  height:56rpx;
  background:rgba(255,74,74,1);
  border-radius:28rpx;
