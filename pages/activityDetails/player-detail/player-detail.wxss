@import "../../index/merchant-particulars/comment-template/comment-template.wxss"; 
.playerDetail {
  background-color: #EBEBEB;
}

.playerInfo {
  height: 250rpx;
  width: 100%;
  position: relative;
}

.playerInfoBack {
  height: 100%;
  width: 100%;
  background-color: #191919;
  opacity: 0.8;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;
}

.playerInfoImg {
  height: 100%;
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.info_inner {
  width: 100%;
  height: 100%;
  padding: 48rpx 0 50rpx 44rpx;
  box-sizing: border-box;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 20;
  display: flex;
  flex-direction: row;
  font-size: 20rpx;
}

.info_inner_l image {
  width: 156rpx;
  height: 156rpx;
  border-radius: 50%;
}

.info_inner_r {
  margin-left: 46rpx;
  color: #fff;
  font-size: 20rpx;
}

.info_name {
  font-size: 40rpx;
  margin-bottom: 14rpx;
}

.info_age, .info_address {
  display: inline-block;
  padding: 2rpx 14rpx;
  border-radius: 50rpx;
}

.info_age image {
  height: 20rpx;
  width: 20rpx;
  vertical-align: middle;
  margin-right: 6rpx;
}

.info_age {
  background-color: #48a9de;
  margin-right: 18rpx;
}

.info_address {
  background-color: #de8848;
}

 .info_cont {
  margin-top: 18rpx;
  width: 380rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
} 

.info_data {
  font-size: 24rpx;
  margin-top: 14rpx;
}

.info_data_num {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.info_data_txt {
  margin-right: 44rpx;
}

.playerResource {
  background-color: #fff;
}

.playerVideo {
  width: 100%;
  height: 440rpx;
  padding: 24rpx 28rpx;
  box-sizing: border-box;
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
}

.vodeoimg {
  height: 100%;
  width: 100%;

  /* display: block; */
  border-radius: 10rpx;
  position: relative;
}
.motai{
