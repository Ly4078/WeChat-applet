}

.playerImgs image {
  width: 272rpx;
  height: 272rpx;
  margin-right: 22rpx;
  border-radius: 8rpx;
}

.activity {
  background-color: #fff;
  padding: 26rpx 0 0 28rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}

.activity_tit {
  display: flex;
  justify-content: space-between;
  color: #191919;
  font-size: 28rpx;
  margin-bottom: 26rpx;
  padding-right: 32rpx;
  box-sizing: border-box;
}

.activity_tit_l {
  position: relative;
  padding-left: 22rpx;
}

.activity_line {
  position: absolute;
  left: 0;
  top: 6rpx;
  background-color: #347BB7;
  height: 28rpx;
  width: 8rpx;
}

.uploadVideo_sign {
  color: #FC512D;
  font-size: 20rpx;
}

.activity_num {
  color: #347BB7;
}

.activity_explain {
  /* color: #347BB7; */
  color: #FC512D;
  font-size: 24rpx;
}

.activity_tit_r {
  color: #555555;
  font-size: 24rpx;
  padding-right: 26rpx;
  position: relative;
}

.activity_tit_r image {
  position: absolute;
  right: 0;
  top: 6rpx;
  width: 12rpx;
  height: 22rpx;
}

.activity_list {
  white-space: nowrap;
  overflow: hidden;
  width: 100%;
}

.activity_item {
  width: 600rpx;
  overflow: hidden;
  display: inline-block;
  margin-right: 16rpx;
}

.activity_item:last-child {
  margin-right: 0;
}

.act_item_bg {
  width: 100%;
  height: 338rpx;
  border-radius: 12rpx;
}

.act_item_info {
  padding: 6rpx 0 10rpx 0; 
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}

.act_info_text {
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #000;
  width: 408rpx;
  padding-top: 8rpx;
}

.act_info_like {
  height: 62rpx;
  border-radius: 50rpx;
  color: #fff;
  line-height: 62rpx;
  background-color: #FC5E2D;
  padding: 0 20rpx;
}

.act_info_like image {
  width: 38rpx;
  height: 34rpx;
  vertical-align: middle;
  margin-left: 8rpx;
  margin-top: -8rpx;
}

.uploadVideo {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  margin: 20rpx 0;
  font-size: 28rpx;
  padding: 26rpx 28rpx;
  box-sizing: border-box;
}

.uploadVideo_t {
  color: #191919;
  position: relative;
  padding-left: 22rpx;
  margin-bottom: 14rpx;
}

.uploadVideo_b {
  font-size: 24rpx;
  color: #555;
}

.uploadVideo_b.first {
  margin-bottom: 14rpx;
}

.uploadBtn {
  width: 98rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #fff;
  background-color: #FC5E2D;
  border-radius: 50rpx;
  margin-top:36rpx;
}

.comment {
  background-color: #fff;
  padding: 26rpx 26rpx 110rpx 28rpx;
  margin-top: 20rpx;
}

.comment_tit {
  height: 60rpx;
  font-size: 28rpx;
  color: #191919;
  position: relative;
  padding-left: 22rpx;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  justify-content: space-between;
}

.initiate-exhibition {
  border-bottom:1rpx solid #e0e0e0;
}

.initiate-right {
  width:14rpx;
  height:24rpx;
  padding-top: 8rpx;
}

.comment_list {
  margin-top: 20rpx;
}

.total-comment {
  height: 72rpx;
}

.total-center {
  display: inline-block;
  border: 1rpx solid #fc5e2d;
  color: #fc5e2d;
  font-size: 28rpx;
  text-align: center;
  line-height: 76rpx;
}

