}
.palyicon{
  width:150rpx;
  height:150rpx;
  position: relative;
  left: 40%;
  top: -660rpx;
  z-index: 1;
}

.videoLikeNum {
  position: absolute;
  right: 48rpx;
  bottom: 44rpx;
  z-index: 100;
  width: 152rpx;
  height: 62rpx;
  line-height: 62rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background-color: #FC5E2D;
  border-radius: 50rpx;
}

.videoLikeNum image {
  width: 38rpx;
  height: 34rpx;
  vertical-align: middle;
  margin-left: 8rpx;
  margin-top: -8rpx;
}

.playerImgs {
  padding: 0 0 14rpx 28rpx;
  white-space:nowrap;
  overflow:hidden;
  width:100%;
