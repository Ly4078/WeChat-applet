@import "../activityDetails/homePage-item/homePage-item.wxss";
page {
  height: 100%;
  width: 100%;
}

.discoverTop {
  width: 100%;
  height: 420rpx;
}

.discoverTop image {
  width: 100%;
  height: 100%;
}

.discover {
  width: 100%;
  height: 100%;
  position: relative;
}

.discoverTab {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding-bottom: 4rpx;
}

.discoverTab view {
  flex: 1;
  text-align: center;
  width: 100%;
  height: 100%;
}

.discoverTab text {
  display: inline-block;
  height: 100%;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #191919;
}

.discoverTab view.active text {
  border-bottom: 4rpx solid #FC5E2D;
}

.datafor {
  display: flex;
  flex-wrap: wrap;
}

button::after {
  border: none;
}

.merchant_none {
  width: 50%;
  height: 242rpx;
  top: 200rpx;
  left: 180rpx;
  position: relative;
  z-index: 9999;
}

.merchant_none image {
  width: 100%;
  height: 100%;
}

.publish-dynamic-condition {
  width: 108rpx;
  height: 108rpx;
}

@keyframes Forward {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(135deg);
  }
}

@keyframes Reversal {
  from {
    transform: rotate(135deg);
  }

  to {
    transform: rotate(0deg);
  }
}

.addtrue {
  animation: Forward 0.5s forwards;
}

.addfalse {
  animation: Reversal 0.5s forwards;
}

.cladd {
  width: 108rpx;
  height: 108rpx;
  z-index: 2;
  border-radius: 50%;
  float: right;
  margin-left: 49rpx;
  font-size: 32rpx;
  font-family: Adobe Heiti Std R;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 108rpx;
  right: 42rpx;
  position: fixed;
  bottom: 31rpx;
}

.clplus {
  z-index: 2050;
}

.dis_article {
  background: #2dacfc;
}

@keyframes article1 {
  from {
    margin-right: 0rpx;
    opacity: 0;
  }

  to {
    margin-right: 296rpx;
    transform: rotate(360deg);
  }
}

@keyframes article2 {
  from {
    margin-right: 296rpx;
  }

  to {
    margin-right: 0rpx;
    opacity: 0;
    transform: rotate(0deg);
  }
}

@keyframes video1 {
  from {
    margin-right: 0rpx;
    opacity: 0;
  }

  to {
    margin-right: 148rpx;
    transform: rotate(360deg);
  }
}

@keyframes video2 {
  from {
    margin-right: 148rpx;
  }

  to {
    margin-right: 0rpx;
    opacity: 0;
  }
}

.dis_video {
  background: #fc2d59;
  animation: video1 0.5s forwards;
  z-index: 2050;
}

.dis_video2 {
  background: #fc2d59;
  animation: video2 0.5s forwards;
}

.distop2 {
  height: 132rpx;
}

.distop {
  padding: 41rpx 38rpx;
  height: 50rpx;
  width: 100%;
  border-bottom: 1rpx solid #fc5e2d;
  position: fixed;
  background: #fff;
  z-index: 2;
}

.mostnew, .mosthot {
  background: #fff;
  border-radius: 0;
  font-size: 36rpx;
  color: #808080;
}

.mostnew {
  border-bottom: 1rpx solid #808080;
}
.toTop {
  left: 30rpx;
  bottom:40rpx;
}