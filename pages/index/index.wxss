/**index.wxss**/
@import "index-item/index-item-template.wxss";
@import "bargainirg-store/bargainirg-template/bargainirg-template.wxss";
page {
  width: 100%;
}

.container {
  display: flex;
  background:RGBA(245, 245, 250, 1);
  flex-direction: column;
}
.templateWrap {
  background: #F5F5FA;
}
.headSeek {
  box-shadow: #aaa7a7 0rpx 4rpx 10rpx 0rpx;
  color: black;
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  align-items: center;
  height: 70rpx;
  width: 86%;
  position: absolute;
  top: 10rpx;
  left: 48rpx;
  z-index: 10;
  opacity: 0.7;
  border-bottom-left-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  background-color: white;
}

.usingTheVolumeBox {
  width: 78%;
  padding-top: 5rpx;
  text-align: right;
}

.usingTheVolume {
  width: 40rpx;
  height: 40rpx;
  padding-right:20rpx;
  padding-top: 4rpx;
}

.homePage_banner {
  height: 420rpx;
  font-size: 32rpx;
}

.site_location {
  width: 18%;
  height: 60rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}

.site_location_text {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.location {
  width: 18rpx;
  height: 10rpx;
  padding-left: 5.5px;
  text-indent: 50px;
}

.lbtupian {
  width: 100%;
  height: 100%;
}

.wrap_recommend {
  height: 40rpx;
}

.recommend_text {
  font-size: 32rpx;
  font-weight: 600;
}

.recommend_more {
  margin-top: 5rpx;
}

.buttomBox{
  width: 100%;
  height: 50rpx;
  background-color:#F5F5FA;
}

.newUserM_box .user_present {
  width: 100%; 
  height: 558rpx;
}

.newUserM_box .newUserM_gif {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 116rpx;
  left: 260rpx; 
  border-radius: 50%;
}

