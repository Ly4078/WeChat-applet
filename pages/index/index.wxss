  display: block;
  padding-bottom: 29rpx; 
  padding-left: 28rpx;
  padding-right: 28rpx;
}

.Resbimg{
  width: 694rpx;
  height: 254rpx;
  display: block;
  border-radius: 16rpx;
}
.resthree{
  width: 694rpx;
  margin: 29rpx 0 0 0;
  min-height: 100rpx;
  display: block;
}
.resthree.secKill_inner {
  clear: both;
  overflow: hidden;
  margin: 0;
}
.RthreeItem,.VthreeItem{
  width: 33.33%;
  height: 100%;
  float: left;
  text-align: center;
  position: relative;
}
.Resimg{
  width: 218rpx;
  height: 218rpx;
  border-radius: 16rpx;
}

.RthreeItem text{
  width: 100%;
  line-height: 30rpx;
  font-size: 27rpx;
}
.RthreeItem text:nth-child(2){
