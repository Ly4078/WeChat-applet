@import "bargainirg-template/bargainirg-template.wxss";

page{
  background-color: f5f5fa;
  padding: 0rpx;
  margin: 0rpx;
}
.indexIcon {
  position: fixed;
  right: 20rpx;
  bottom: 120rpx;
  z-index: 1000;
  width: 100rpx;
  height: 100rpx;
}
.diagram{
  width: 100%;
  position: relative;
  margin-top: 80rpx;
  background: #78B6FC;
}

.diagram-image{
  width: 100%;
  height: 181rpx;
}

.diagramWrap-close{
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  position: absolute;
  top: 4rpx;
  right: 6rpx;
  z-index: 9;
}

.diagram-close{
  width: 28rpx;
  height: 28rpx;
}

.templateWrap{
  padding-bottom: 30rpx;
}

page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  position: fixed;
  top: 0rpx;
  right: 0rpx;
  left: 0rpx;
  z-index: 999;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #78B6FC;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #78B6FC;
}

.unders{
  padding-top: 80rpx;
}


