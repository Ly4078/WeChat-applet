.flashSaleWrap{
  width: 100%;
  height: 250rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
}

.flashSale-left{
  width: 250rpx;
  height: 250rpx;
}

.flashSale-img{
  width: 250rpx;
  height: 250rpx;
  border-top-left-radius: 16rpx;
  border-bottom-left-radius: 16rpx;
}

.flashSale-right{
  width: 472rpx;
  height: auto;
  border: 1px solid red;
  padding-left: 26rpx;
  background-color: #fff;
  border-top-right-radius:16rpx;
  border-bottom-right-radius: 16rpx; 
}

.flashSaleBut{
  width: 250rpx;
  height: 66rpx;
  position: absolute;
  bottom: -1rpx;
  left: 0rpx;
  z-index: 999;
}

.flashSaleRig-row{
  width: 90%;
}

.diningName{
  width: 96%;
  font-size:36rpx;
  font-weight:500;
  color:rgba(252,94,45,1);
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.diningNameImg{
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle
}

.sumName text:nth-child(2){
  font-size:20rpx;
  color:rgba(177,177,177,1);
  vertical-align: middle;
  padding: 0rpx 30rpx 0rpx 8rpx;
}

.sumName text:nth-child(3){
  font-size:20rpx;
  color:rgba(177,177,177,1);
}

.sumPurchase{
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.sumResidue{
  width: 50%;
}

.oncePurchase{
  width: 40%;
}

.fixation{
  font-size:46rpx;
  font-weight:600;
  color:rgba(252,94,45,1);
}

.fixation text:nth-child(1){
  font-size:24rpx;
  color:rgba(252,94,45,1);
}

.fixationTop text:nth-child(2){
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  text-decoration:line-through;
  color:rgba(177,177,177,1);
  padding-left: 18rpx;
}