page {
  background-color: #fc5e2d;
  width: 100%;
  height: 100%;
}

.detailsWarp {
  width: 100%;
  text-align: center;
  position: relative;
}

.detailsImg {
  width: 694rpx;
  height: 778rpx;
  padding-top: 3rpx;
}
.detailscf {
  width: 694rpx;
  height:867rpx;
  padding-top: 3rpx;
}

.speciesText {
  color: #191919;
  font-size: 60rpx;
  letter-spacing: 2px;
  display: block;
}

.spaeciescondition {
  color: #555;
  font-size: 26rpx;
}

.speciesWrap {
  position: absolute;
  width: 100%;
  margin-top: -81%;
}
.orders{
  width:93%;
  height:110rpx;
  text-align:center;
  background:#fff;
  position:absolute;
  top:206rpx;
  margin-left:3.5%;
}
.orders view{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  position: relative;
}

.orders view:nth-child(1) button{
  padding: 0;
  margin: 0;
  height: 60rpx;
  width:200rpx;
  line-height:60rpx;
  margin-left:251rpx;
  background: #FC5E2D;
  text-align: center;
  color: #FFFFFF;
  font-size: 36rpx;
}
.orders view:nth-child(1) image{
  padding: 0;
  margin: 0;
  height: 60rpx;
  width:200rpx;
  line-height:60rpx;
  left:251rpx;
  top: 0;
  border: 2rpx solid red;
  opacity: 0;
  z-index: 3;
  position: absolute;
}
.orders view:nth-child(2){
   color: #808080;
  font-size: 24rpx;
}
.countersign {
  width: 100%;
  height: 58px;
  background-color: white;
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0px;
}

.countersign_left {
  padding-left: 40rpx;
}

.amount-number {
  color: #fc5e2d;
  font-size: 50rpx;
}

.amount-text {
  color: #fc5e2d;
  font-size: 26rpx;
  padding-left: 2px;
}

.past-due {
  color: #b1b1b1;
  font-size: 24rpx;
  padding-left: 7px;
  text-decoration: line-through;
}

.countersign-past-due {
  font-size: 24rpx;
  color: #555;
}

.discount-number {
  color: #fc5e2d;
  border: 0.3px solid #fc5e2d;
  width: 100rpx;
  height: 26rpx;
  text-align: center;
  line-height: 26rpx;
  margin-left: 10px;
  border-top-left-radius: 4rpx;
  border-top-right-radius: 4rpx;
  border-bottom-right-radius: 4rpx;
  border-bottom-left-radius: 4rpx;
  padding: 0px 4px;
}

.countersign-right {
  width: 30%;
  height: 58px;
  text-align: center;
  line-height: 58px;
  padding-top: 10px;
  padding-right: 20px;
}
.shouquan{
  font-size: 30rpx;
  margin-top:30rpx;
