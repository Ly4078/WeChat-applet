/* 搜索框 */
.search {
  width: 100%;
  height: 88rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 1rpx solid #EBEBEB;
  border-bottom: 1rpx solid #EBEBEB;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}

.search_inner {
  width: 100%;
  height: 66rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  background-color: #F5F5F5;
  border-radius: 34rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search_inner image {
  height: 46rpx;
  width: 46rpx;
  margin-right: 10rpx;
