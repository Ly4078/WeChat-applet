page, .categoryBox {
  height: 100%;
  width: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.categoryBox {
  color: #191919;
  font-size: 24rpx;
  background-color: #fff;
}

/* 搜索框 */
.search {
  width: 100%;
  height: 88rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 1rpx solid #EBEBEB;
  border-bottom: 1rpx solid #EBEBEB;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}

.search_inner {
  width: 100%;
  height: 66rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  background-color: #F5F5F5;
  border-radius: 34rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search_inner image {
  height: 46rpx;
  width: 46rpx;
  margin-right: 10rpx;
}

.search_inner input {
  height: 100%;
  color: #808080;
  font-size: 28rpx;
}

/* 类目左 */
.category {
  display: flex;
  flex-direction: row;
  height: 100%;
  /* padding-top: 88rpx; */
  box-sizing: border-box;
}

.category_l {
  width: 23%;
  height: 100%;
  background-color: #F5F5FA;
  overflow: scroll;
}

.l_list {
  height: 82rpx;
  position: relative;
}

.l_list.active {
  background-color: #fff;
}

.l_list.active .l_list_txt {
  color: #FC5E2D;
}

.l_list_icon {
  height: 100%;
  position: absolute;
  top: 0;
  left: 16rpx;
  display: flex;
  align-items: center;
}

.l_list_icon view {
  width: 6rpx;
  height: 26rpx;
  background-color: #FC5E2D;
}

.l_list_txt {
  width: 100%;
  height: 100%;
  line-height: 82rpx;
  text-align: center;
}

.category_r {
  width: 77%;
  height: 100%;
  padding: 0 30rpx 0 38rpx;
  box-sizing: border-box;
  overflow: scroll;
}

.classify_item {
  width: 100%;
  height: 170rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #EBEBEB;
}

.classify_item image {
  height: 108rpx;
  width: 108rpx;
  margin-right: 30rpx;
}

.classify_l_r {
  display: flex;
  flex-direction: row;
}

.goods_tit {
  font-size: 24rpx;
  font-weight: Semibold;
}

.goods_addr, .goods_distance {
  font-size: 20rpx;
  color: #969696;
  display: flex;
  justify-content: space-between;
}

.goods_addr {
  padding: 4rpx 0;
}

.goods_distance {
  padding-top: 36rpx;
}

.goods_icon {
  font-size: 18rpx;
  color: #FC5E2D;
  background-color: #FFF5F2;
  border: 1rpx solid #FFA286;
  border-radius: 4rpx;
}

.priceBox {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  padding-top: 10rpx;
}

.discount_price {
  font-size: 24rpx;
  color: #FF4A4A;
  padding-right: 14rpx;
}

.original_price {
  font-size: 20rpx;
  color: #969696;
  text-decoration: line-through;
}
.boxload{
  margin-left:45%;
}