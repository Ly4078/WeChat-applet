<import src="index-item/index-item-template.wxml" />
<import src="bargainirg-store/bargainirg-template/bargainirg-template.wxml" />

<view class="container">
  <!--顶部 定位 搜索 卷  -->
  
  <view class="newUserModal" wx:if="{{issnap}}">
    <view class='drawer_screen'>
      <view class='sqtishi'>提示</view>
      <view class='drphnumber'>获得更多体验,请移步[我的]-[新用户注册]</view>
      <button class='gettel sqgettel' bindtap='closetel' id='1'>确定</button>
      <button class='gettel colosetel' bindtap='closetel' id='2'>取消</button>
    </view>
  </view>

  <view class="newUserModal loginuser" wx:if="{{istouqu}}" catchtouchmove='true'>
    <view class="drawer_screen"></view>
    <button class="newUserM_box" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">
      <image class='loginimg' src='/images/icon/login.png'></image>
    </button>
  </view>


  <!-- 新用户弹窗 -->
  <view class="newUserModal" wx:if="{{userGiftFlag || isNew || isfirst}}" catchtouchmove='true'>
    <view class="drawer_screen"></view>
    <view wx:if="{{isphoneNumber}}" class="newUserM_box getphone gettels">
      <view class='nubtitle'>快速注册</view>
      <view class='setphone'>
        <input type="number" value="{{phonetwo}}" maxlength="11" focus='true' placeholder="输入手机号" bindinput="numbindinput"></input>
        <image class="clphone" bindtap='closephone' src="https://xqmp4-1256079679.file.myqcloud.com/text_359631370815683703.png"></image>
      </view>
      <view class='setcode'>
        <input type="number" maxlength="4" placeholder="输入验证码" bindinput="yzmbindblur"></input>
        <button bindtap='submitphone' class='{{rematime == "获取验证码"?"nobut":"actbut"}}'>{{rematime}}</button>
      </view>
      <view class='twobut'>
        <view class='closebut' bindtap='closebut'>取消</view>
        <view class='cfimbut' bindtap='submitverify'>确定</view>
      </view>
    </view>

    <view wx:else class="newUserM_box">
      <image class="user_present" src="https://xqmp4-1256079679.file.myqcloud.com/test_211362532181670312.png" bindtap='newUserToGet'></image>
      <image class="newUserM_gif" src="/images/icon/xiangqiLGBL.gif"></image>
    </view>

    <image class="newuser_cancel" src="/images/icon/cancel.png" bindtap='userGiftCancle'></image>
  </view>

  <!-- 头部搜索   -->
  <view class='headSeek'>
    <view class='site_location' bindtap='userLocation'>
      <text class='site_location_text'>{{city}}</text>
      <image class='location' src='/images/icon/home_bar_arrow.png'></image>
    </view>
    <view class='page_row'> </view>
    <view class="usingTheVolumeBox" bindtap="seekTap">
      <image class="usingTheVolume" src="/images/icon/home_bar_search.png"></image>
    </view>
  </view>


  <!-- 轮播组件 -->
  <swiper class="homePage_banner" indicator-dots="true" autoplay="true" circular="true" interval="5000" indicator-active-color="rgba(252, 94, 45,0.8)">
    <block wx:for="{{carousel}}" wx:for-item="item" wx:for-index="idx" wx:key="{{index}}">
      <swiper-item>
        <image bindtap="toNewExclusive" mode="aspectFill" id="{{item.id}}" class="lbtupian" src='{{item.imgUrl}}'></image>
      </swiper-item>
    </block>
  </swiper>


  <!-- 导航nav_one -->
  <view class='indexNavOne'>
    <view wx:for="{{isfile?navs:navs2}}" wx:key="index" class='navitem' id="{{item.id}}" bindtap='handnavOne'>
      <image class="img{{index+1}}" src='{{item.img}}'></image>
      <view class="navitem_txt">{{item.name}}</view>
    </view>
  </view>

  <!-- 到店自提 -->
  <view>
    <image bindtap='toStore' class="toStoreBg" src="https://xqmp4-1256079679.file.myqcloud.com/Colin_erywgegrerkgor.jpg"></image>
  </view>

  <!-- 享7生鲜 -->
  <block wx:for="{{crab}}" wx:for-item="item" wx:for-index="idx" wx:key="{{index}}">
    <template is="toFresh" data="{{item}}" wx:if="{{fresh2.spuId}}" />
  </block>
  <view class='Resbanner secKillList' wx:if="{{fresh2.spuId}}">
    <image class='Resbimg' catchtap='crabSteamed' src="{{fresh1.imgUrl}}"></image>
    <view class='crabModels'>
      <image mode='scaleToFill' catchtap='crabPrtDetails' class='crabModels-img' src="{{fresh2.imgUrl}}" id='{{fresh2.id}}' data-spuId="{{fresh2.spuId}}"></image>
      <image mode='scaleToFill' catchtap='crabPrtDetails' class='crabModels-img' src="{{fresh3.imgUrl}}" id='{{fresh3.id}}' data-spuId="{{fresh3.spuId}}"></image>
    </view>
  </view>

  <!-- 限量秒杀 -->
  <view wx:if="{{secKillList.length > 0}}">
    <block wx:for="{{secKillArr}}" wx:for-item="item" wx:for-index="idx" wx:key="{{index}}">
      <template is="secKill" data="{{item}}" />
    </block>
    <view class='Resbanner secKillList'>
      <view class='resthree secKill_inner'>
        <view wx:for="{{secKillList}}" wx:key="index" class='RthreeItem' id='{{item.id}}' data-index="{{item.shopId}}">

          <image class='Resimg' wx:if="{{item.picUrl}}" src="{{item.picUrl}}" bindtap='toSecKillDetail' id="{{item.id}}" data-shopid="{{item.shopId}}"></image>
          <image wx:else class='Resimg' src='/images/icon/morentu.png' bindtap='toSecKillDetail' id="{{item.id}}" data-shopid="{{item.shopId}}"></image>

          <text class="secKillSkuName">{{item.skuName}}</text>
          <text class='Baragio'>¥{{item.agioPrice}}</text>
          <text class='BarinPrice'>¥{{item.sellPrice}}</text>
          <view class="secKillIcon">抢购</view>
        </view>
      </view>
    </view>
  </view>



  <!--拼菜砍价  -->
  <block wx:for="{{Bargain}}" wx:for-item="item" wx:for-index="idx" wx:key="{{index}}">
    <template is="veoRes" data="{{item}}" />
  </block>
  <view class='Resbanner'>
    <image class='Resbimg' id='1' data-ind="1" src="{{bannthree[0].imgUrl}}" catchtap='chartOfDisheses'></image>
    <view class='resthree'>
      <view wx:for="{{bargainList}}" wx:key="index">
        <view class='RthreeItem' id='{{item.id}}' data-index="{{item.shopId}}" bindtap='candyDetails'>
          <image class='Resimg' wx:if="{{item.picUrl}}" src="{{item.picUrl}}"></image>
          <image class='Resimg' wx:else src='/images/icon/morentu.png'></image>
          <text>{{item.skuName}}\n</text>
          <text class='Baragio'>¥{{item.agioPrice}}</text>
          <text class='BarinPrice'>¥{{item.sellPrice}}</text>
        </view>
      </view>
    </view>
  </view>

  <!--商家广告位  -->
  <image class='Advertising' id="3" data-ind="3" bindtap="handbaoming" src="{{bannthree[2].imgUrl}}"></image>

  <!--拼菜砍价列表  -->
  <view>
    <view class="templateWrap {{showModal?'':'unders'}}">
      <view class='cutCuisine'>
        <block wx:for="{{bargainListall}}" wx:key="{{index}}" id="{{index}}" wx:for-index="idx">
          <template is="cuisine" data="{{item}}" />
        </block>
      </view>
    </view>
  </view>


  <view class='toTop' wx:if="{{_page>1}}" bindtap='toTop'>
    <image src='/images/icon/toTop.png'></image>
  </view>

  <view class='buttomBox'></view>

</view>