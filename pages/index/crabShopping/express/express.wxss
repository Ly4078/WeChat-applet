page {
  background-color: #F5F5FA;
  font-size: 26rpx;
}

.address {
  height: 126rpx;
  background-color: #fff;
  margin: 22rpx 0 20rpx 0;
  color: #191919;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.address_l_t {
  padding-top: 24rpx;
}

.address_l_t text:first-child{
  margin-right: 40rpx;
}

.address_l_b {
  color: #808080;
  font-size: 24rpx;
  padding-top: 8rpx;
  width: 600rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.address_r {
  height: 100%;
  display: flex;
  align-items: center;
}

.address_r image {
  width: 16rpx;
  height: 28rpx;
}

.remarks {
  display: flex;
  flex-direction: row;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 28rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.remarks input {
  height: 100%;
  width: 80%;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.freight {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 28rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.exchange {
  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  padding: 0 46rpx;
  box-sizing: border-box;
  margin-top: 50rpx;
}

.exchange view {
  width: 100%;
  height: 100%;
  color: #fff;
  background-color: #FC6232;
  font-size: 30rpx;
  text-align: center;
  border-radius: 10rpx;
}
.exchange .bg{
  background: #ccc;
}
.noAddress {
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  margin: 22rpx 0 20rpx 0;
  color: #191919;
  font-size: 30rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.equally{
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size:28rpx;
  color:rgba(128,128,128,1);
  letter-spacing: 2rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-top: 20rpx;
}

.equally input{
  width: 75%;
}

.eqpicker{
  width: 100%;
  height: 88rpx;
}

.picker{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.intervalBind{
  font-size:26rpx;
  color:rgba(177,177,177,1);
}

.datenum{
  float: right;
}

.submitRight{
  width: 22rpx;
  height: 12rpx;
  transform:rotate(-90deg);
  vertical-align: middle;
}