page {
  width: 100%;
  height: 100%;
  background-color: #F5F5FA;
}

.storeList {
  width: 100%;
  height: 100%;
  padding: 22rpx 28rpx 0 28rpx;
  box-sizing: border-box;
  font-size: 24rpx;
}

.storeItem {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.store_top {
  width: 100%;
  padding: 26rpx 32rpx 26rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #EBEBEB;
}

.storeName {
  padding-bottom: 10rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  color: #191919;
}

.storeAddress {
  color: #555;
}

.store_bot {
  width: 100%;
  height: 82rpx;
  line-height: 82rpx;
  display: flex;
  flex-direction: row;
  color: #F96811;
}

.store_bot view {
  width: 50%;
  height: 100%;
  text-align: center;
}

.store_bot view:first-child {
  border-right: 1rpx solid #EBEBEB;
  box-sizing: border-box;
}

.zhanweitu {
  margin: 0 auto;
  display: flex;
  justify-content: center;
  padding-top: 400rpx;
}

.zhanweitu image {
  width: 312rpx;
  height: 203rpx;
}