.stepper {  
    width: 80px;  
    height: 26px;  
    /*给主容器设一个边框*/  
    border: 1px solid #ccc;  
    border-radius: 3px; 
}  
  
/*加号和减号*/  
.stepper text {  
    width: 26px;  
    line-height: 26px;  
    text-align: center;  
    float: left;  
}  

  
/*数值*/  
.stepper input {  
    width: 26px;  
    height: 26px;  
    float: left;  
    margin: 0 auto;  
    text-align: center;  
    font-size: 32rpx;  
    border-left: 1px solid #ccc;  
    border-right: 1px solid #ccc;  
}  
  
/*普通样式*/  
.stepper .normal{  
    color: #FC5E2D;
}  
  
/*禁用样式*/  
.stepper .disabled{  
    color: #FC5E2D; 
} 

