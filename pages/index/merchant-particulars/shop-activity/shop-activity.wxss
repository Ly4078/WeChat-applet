@import "../activity-item/activity-item.wxss";
.navbarBox {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #E0E0E0;
  box-sizing: border-box;
}
.navbarBox view {
  height: 100%;
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
}
.navbarBox view.active text{
  display: inline-block;
  height: 100%;
  color: #FF762B;
  border-bottom: 5rpx solid #FF762B;
  box-sizing: border-box;
}
.merchant_box {
  background-color: #fff;
  width: 100%;
  padding: 0 28rpx 28rpx 28rpx;
  box-sizing: border-box;
}