}

.location-left {
  width: 26rpx;
  height: 30rpx;
  vertical-align: middle; 
}

.locationWrap_phone {
  padding-left: 34rpx;
  padding-top: 4rpx; 
  position: relative;
}

.locationWrap_phone::before {
  content: ''; 
  display: block;
  height: 42rpx;
  width: 2rpx;
  background-color: #D2D2D2;
  position: absolute;
  top: 6;
  left: 0;
  margin-top: 8rpx;
}

.location-right {
  width: 40rpx;
  height: 38rpx;
}

.location-text {
  display: inline-block;
  width: 500rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  vertical-align: middle;
  margin-left: 8rpx;
}

.voteList {
  width: 80rpx;
  height: 30rpx;
}

.initiate-right {
  width: 14rpx;
