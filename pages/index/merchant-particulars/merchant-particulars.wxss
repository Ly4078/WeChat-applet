  padding-right: 6rpx; 
}

.details-addition text {
  display: inline-block;
  color: #808080;
  font-size: 24rpx;
  border: 1rpx solid #b0b0b0;
  padding: 0 8rpx;
  margin-right: 20rpx;
  border-radius: 4rpx;
}

.locationWrap {
  display: flex;
  justify-content: space-between;
  color: #191919;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
