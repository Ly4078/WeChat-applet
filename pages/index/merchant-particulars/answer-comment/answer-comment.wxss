page, .answer-comment {
  background-color: #F5F5FA;
  height: 100%;
}

.comment_inner {
  background-color: #fff;
  padding: 28rpx 28rpx 0 28rpx;
  box-sizing: border-box;
}

textarea {
  width: 100%;
  height: 328rpx;
  border: 1rpx solid #E0E0E0;
  background-color: #F8F8F8;
  border-radius: 10rpx;
  padding: 26rpx 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}

.btnBox {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
}

.btnBox button {
  width: 48%;
  height: 80rpx;
  font-size: 32rpx;
  line-height: 80rpx;
}

.btnBox .send {
  background-color: #FF762B;
  color: #fff;
}

.btnBox .cancel {
  background-color: #EDEDED;
  color: #6E6E6E;
}